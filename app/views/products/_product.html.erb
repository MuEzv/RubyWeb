<%# 
  <style>
    #pic {
          width: 300px;
          height: 95%;
          float: left;
          border: 1px solid black;
          padding: 2px;
      }

      img {
          width: 100%;
          height: 100%;
          object-fit: contain;
      }

      #prod {
          padding: 0px 0px 5px 0px;
          height: 180px;
      }
  </style>
%> 

<div id="<%= dom_id product %>" class="<%= cycle('list_line_odd', 'list_line_even') %>">

<div id='prod'>

 <div id='pic' >
    <%= image_tag(product.image) %>
  </div>

  <p>
    <%= product.name %>
  </p>

  <p>
    <%= product.description %>
  </p> 

  <p>
    <strong>Price:</strong>
    <%= number_to_currency(product.price) %>
  </p>
  <%= link_to "Show this product", product %>
</div>

</div>
