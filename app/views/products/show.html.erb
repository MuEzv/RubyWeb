<p style="color: green"><%= notice %></p>

<%= render @product %>


<% if session[:user_id] %>
  <div>
    <%= link_to "Edit this product", edit_product_path(@product) %> |
    <%= link_to "Back to products", products_path %>
    <%= button_to "Destroy this product", @product, method: :delete %>
  </div>

  <% else %>
  <div>
      <%= button_to 'Add to Cart', lineitems_path(product_id: @product.id), class:'add_to_cart', remote: true %>
      <%= button_to 'Back to Product List', shopper_path, method: :get%>
  </div>
<% end%>
