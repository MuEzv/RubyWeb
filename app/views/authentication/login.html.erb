
<style>
  td{
    height: 30px;
    font-size: 20px;
  }
 
</style>
<% if session[:message] %>
  <h2> <%= session[:message] %> </h2>
  <% session[:message] = nil %>
<% end %>

<p style="color: green"><%= notice %></p>
<%= form_tag(check_password_path, method: :post) do %>
  <table>
    <tr>
      <td><%= label_tag :username %></td>
      <td><%= text_field_tag :username%></td>
    </tr>

    <tr>
      <td><%= label_tag :password %></td>
      <td><%= password_field_tag :password%></td>
    </tr>
           
    <tr>
      <td></td>
    <td><%= submit_tag 'Log In'%>   
    </td>
    </tr>
    <tr>
      <td></td>
      <td>    <%= link_to 'Sign up', new_user_path%></td>
      </tr>
</table>
<% end %>
